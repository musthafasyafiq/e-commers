{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-backend-api.herokuapp.com"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "ignoreCommand": "npx turbo-ignore",
  "installCommand": "npm install --prefix .",
  "buildCommand": "npm run build",
  "outputDirectory": ".next"
}
